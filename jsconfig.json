{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "commonjs",
    "target": "ESNext",
    "jsx": "react-jsx",
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true
  },
  "paths": {
    "~/*": ["./*"],
    "@assets/*": ["./assets/*"],
    "assets/*": ["./src/assets/*"]
  },
  "exclude": ["node_modules", "**/node_modules/*", "dist", "**/dist/*"],
  "include": ["./src/**/*", "./src/**/*.jpg", "./src/**/*.png"]
}
